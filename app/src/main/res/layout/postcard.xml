<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_icon_white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userImage"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:text="Eustace R. Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/shoe_example"
        android:layout_below="@+id/userName"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/like_icon"
        android:layout_below="@id/productImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/commentButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/comment_icon"
        android:layout_toRightOf="@id/likeButton"
        android:layout_below="@id/productImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/addToCart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/cart"
        android:layout_below="@id/productImage"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productImage"
        android:layout_toLeftOf="@+id/addToCart"
        android:layout_margin="15dp"
        android:text="$100"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/likeButton"
        android:layout_marginLeft="10dp"
        android:text="Lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="18dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/description"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>